<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:orientation="horizontal"
        android:background="@drawable/custom_button">

        <ImageButton
            android:id="@+id/btnAddAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_add_image_to_album"
            android:contentDescription="Add an image to an album"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"/>

        <ImageButton
            android:id="@+id/btnAddFavorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_favorite"
            android:contentDescription="Add an image to favorite album"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_delete_image_in_album"
            android:contentDescription="Delete the image"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"/>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_edit"
            android:contentDescription="Edit the image"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"/>

        <ImageButton
            android:id="@+id/btnDeleteInAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_delete_in_album"
            android:contentDescription="Delete the image from the current album"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"/>

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_information"
            android:contentDescription="Delete the image from the current album"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"/>

    </LinearLayout>
</LinearLayout>